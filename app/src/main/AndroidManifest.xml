<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learningeasle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo_large"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".chats.ChatDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".chats.ChatActivity"
            android:label="Chats" />
        <activity android:name=".ViewAttachement" />
        <activity
            android:name=".admin.AdminMainPage"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserDetails.UserProfile" />
        <activity
            android:name=".UserDetails.UpdateProfile" />
        <activity
            android:name=".ViewImage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PostDetailActivity" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".PickInterests"
            android:label="Your Interests" />
        <activity
            android:name=".Accounts.Profile" />
        <activity
            android:name=".Accounts.Register"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".Accounts.Login"
            android:theme="@style/AppTheme2" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.learningeasle.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.learningeasle.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <service
            android:name=".PushNotifications.MyFireBaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".PushNotifications.MyFirebaseIdSevice"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>