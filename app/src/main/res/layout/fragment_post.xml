<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD2D2"
    tools:context=".PostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/interest_shaper">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/interests"
            android:prompt="@string/interest_prompt"
            android:spinnerMode="dropdown" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="10dp"
        android:background="#DCD2D2"
        android:orientation="vertical">


        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/interest_shaper"
            android:fontFamily="@font/ubuntu"
            android:hint="Add a title.."
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#11568E"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/interest_shaper"
            android:fontFamily="@font/ubuntu"
            android:gravity="top"
            android:hint="Description goes here.."
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:padding="10dp"
            android:textColor="#11568E"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/interest_shaper"
            android:src="@drawable/ic_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_addPost"
            style="@style/MyProgressBarRectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:visibility="gone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_margin="10dp"
            android:background="#34282C"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_done"
            android:text="Post"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</RelativeLayout>