<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/uDp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pic">

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:fontFamily="@font/ubuntu"
                        android:text="Name"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textColor="@color/allTabs"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pType"
                        android:singleLine="true"
                        android:fontFamily="@font/ubuntu"
                        android:text="Type"
                        android:textStyle="bold"
                        android:textColor="@color/allTabs"
                        android:textSize="20sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:fontFamily="@font/ubuntu"
                    android:text="16sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/more"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@null"
                android:src="@drawable/ic_more" />
            <ImageView
                android:id="@+id/bookmarks"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_bookmark_border_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ptitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ubuntu"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Description about the post"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/pImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <com.google.android.material.floatingactionbutton.FloatingActionButton
             android:id="@+id/view_attached"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone"
             android:backgroundTint="@color/allTabs"
             android:src="@drawable/ic_baseline_attach_file_24"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/video_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:backgroundTint="@color/allTabs"
            android:src="@drawable/ic_baseline_voice_chat_24" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/pdf_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:backgroundTint="@color/allTabs"
                android:src="@drawable/ic_document"
                android:textColor="#FFFFFF" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/audio_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:backgroundTint="@color/allTabs"
                android:src="@drawable/ic_audio"
                android:textColor="#FFFFFF" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totallikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu"
                android:text="1.2k likes" />

            <TextView
                android:id="@+id/totalcomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu"
                android:text="2k Comments"
                android:drawableRight="@drawable/ic_baseline_stop_24"
                android:drawablePadding="4dp"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewCount"
                android:layout_weight="0.05"
                android:textAlignment="viewEnd"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingRight="4dp"
                android:drawableLeft="@drawable/ic_views"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_favourite"
                android:backgroundTint="@color/text"
                android:drawablePadding="5dp"
                android:text="LIKE"
                android:fontFamily="@font/ubuntu"/>

            <Button
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/comment"
                android:drawablePadding="5dp"
                android:text="COMMENT"
                android:fontFamily="@font/ubuntu"
                android:backgroundTint="@color/text"/>

            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/share"
                android:drawablePadding="5dp"
                android:fontFamily="@font/ubuntu"
                android:backgroundTint="@color/text"
                android:text="SHARE" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>